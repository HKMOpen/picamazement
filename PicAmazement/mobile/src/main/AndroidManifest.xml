<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.rainbowbreeze.picama" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name=".ui.PicturesRecyclerListActivity"
            android:label="@string/common_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PicturesListActivity"
            android:label="@string/common_app_name" >
            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".ui.FullscreenPictureActivity2"
            android:label="@string/title_activity_fullscreen_picture"
            android:theme="@style/AppFullscreenTheme" >
        </activity>
        <!-- android:configChanges="orientation|keyboardHidden|screenSize" -->
        <activity
            android:name="ui.FullscreenPictureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_picture"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ui.DropboxSettingsActivity"
            android:label="@string/dropboxsettings_act_title"
        >
            <intent-filter>
                <action android:name="action_StartDropboxSettings"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.GDriveSettingsActivity"
            android:label="@string/gdrivesettings_act_title"
            >
            <intent-filter>
                <action android:name="action_StartGDriveSettings"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <provider
            android:name=".data.provider.PictureProvider"
            android:authorities="it.rainbowbreeze.picama.provider"
            android:exported="false" />

        <service
            android:name=".logic.wearable.SendDataToWearService"
            android:exported="false" >
        </service>
        <service android:name=".logic.UpdatePictureFieldsService" >
            <intent-filter>
                <action android:name="it.rainbowbreeze.picama.Action.Picture.Hide" />
                <action android:name="it.rainbowbreeze.picama.Action.Picture.Save" />
            </intent-filter>
        </service>
        <service android:name=".logic.wearable.ReceiveDataFromWearService" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

    </application>

</manifest>
