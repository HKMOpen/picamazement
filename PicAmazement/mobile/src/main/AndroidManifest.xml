<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.rainbowbreeze.picama" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="it.rainbowbreeze.picama.common.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="it.rainbowbreeze.picama.ui.PictureListActivityFull"
            android:label="@string/common_app_name" >
        </activity>
        <activity
            android:name="it.rainbowbreeze.picama.ui.PictureListActivity"
            android:label="@string/common_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.rainbowbreeze.picama.ui.FullscreenPictureActivity2"
            android:label="@string/title_activity_fullscreen_picture"
            android:theme="@style/AppFullscreenTheme" >
        </activity>
        <!-- android:configChanges="orientation|keyboardHidden|screenSize" -->

        <provider
            android:name="it.rainbowbreeze.picama.data.provider.PictureProvider"
            android:authorities="it.rainbowbreeze.picama.provider"
            android:exported="false" />

        <service
            android:name="it.rainbowbreeze.picama.logic.wearable.SendDataToWearService"
            android:exported="false" >
        </service>
        <service android:name="it.rainbowbreeze.picama.logic.UpdatePictureFieldsService" >
            <intent-filter>
                <action android:name="it.rainbowbreeze.picama.Action.Picture.Hide" />
                <action android:name="it.rainbowbreeze.picama.Action.Picture.Save" />
            </intent-filter>
        </service>
        <service android:name="it.rainbowbreeze.picama.logic.wearable.ReceiveDataFromWearService" >
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <activity
            android:name="it.rainbowbreeze.picama.ui.FullscreenPictureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_picture"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
