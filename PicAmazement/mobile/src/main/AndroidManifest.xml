<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.rainbowbreeze.picama" >

    <application
        android:name="it.rainbowbreeze.picama.common.MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- android:theme="@style/AppTheme" -->
        <activity
            android:name="it.rainbowbreeze.picama.ui.PictureListActivityFull"
            android:label="@string/common_app_name" >
        </activity>
        <activity
            android:name="it.rainbowbreeze.picama.ui.PictureListActivity"
            android:label="@string/common_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="it.rainbowbreeze.picama.ui.FullscreenPictureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen_picture"
            android:theme="@style/FullscreenTheme"
        >
        </activity>

        <provider
            android:name="it.rainbowbreeze.picama.data.provider.PictureProvider"
            android:authorities="it.rainbowbreeze.picama.provider"
            android:exported="false" />

    </application>

</manifest>
